{
	"name": "nielslange/smntcs-show-sale-price-date-for-woocommerce",
	"description": "Show WooCommerce sale prices date on shopping page",
	"homepage": "https://github.com/nielslange/smntcs-show-sale-price-date-for-woocommerce",
	"type": "wordpress-plugin",
	"keywords": [
		"WordPress",
		"Plugin",
		"SMNTCS SMNTCS Show Sale Price Date for WooCommerce"
	],
	"license": "GPL-2.0-or-later",
	"authors": [
		{
			"name": "Niels Lange",
			"email": "info@nielslange.de"
		}
	],
	"require": {
		"php": ">=8.2"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "1.0.0",
		"humanmade/psalm-plugin-wordpress": "3.1.1",
		"overtrue/phplint": "9.5.3",
		"phpcompatibility/phpcompatibility-wp": "2.1",
		"squizlabs/php_codesniffer": "3.9.0",
		"vimeo/psalm": "5.26.1",
		"wp-coding-standards/wpcs": "3.1.0"
	},
	"scripts": {
		"phpcbf": "phpcbf --standard=phpcs.xml .",
		"phpcs": "phpcs --standard=phpcs.xml .",
		"phplint": "phplint",
		"psalm": "psalm --no-cache"
	},
	"config": {
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
